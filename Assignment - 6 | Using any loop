    }

4.  //Write a program to calculate sum of squares of first N natural numbers.
    #include <stdio.h>
    int main()
    {
        int input,sum=0,i;
        printf("Enter a number :");
        scanf("%d",&input);
        for (i=1;i<=input;i++)
        sum=sum+i*i;
        printf("Sum of squares of first %d natural numbers: %d \n",input,sum);
        return 0;
    }

5.  //Write a program to calculate sum of cubes of first N natural numbers.
    #include <stdio.h>
    int main()
    {
        int input,sum=0,i;
        printf("Enter a number :");
        scanf("%d",&input);
        for (i=1;i<=input;i++)
        sum=sum+i*i*i;
        printf("Sum of squares of first %d natural numbers: %d \n",input,sum);
        return 0;
    }

6.  //Write a program to calculate factorial of a number.
    #include <stdio.h>
    int main()
    {
        int input,sum=1,i;
        printf("Enter a number :");
        scanf("%d",&input);
        for (i=1;i<=input;i++)
        sum*=i;
        printf("factorial of %d is: %d \n",input,sum);
        return 0;
    }

7.  //Write a program to count digits in a given number.
    #include <stdio.h>
    int main()
    {
        long int input;
        int sum=1,i,count;
        printf("Enter a number :");
        scanf("%d",&input);
        for (i=1;i<=20;i++){
            if (input/10){
                input=input/10;
                sum++;
            }
            else 
            break;
        }   
        printf("digit in number : %d \n",sum);
        return 0;
    }

8.  //Write a program to check whether a given number is a Prime number or not.
    #include <stdio.h>
    int main(){
        int input,i=1,j;
        printf("\nEnter a number to chack is a prime or not :");
        scanf("%d",&input);
        while(1){
            if(i*i>=input)
            break;
            i++;
        }
        for(j=2;j<=i;j++)
        {   
            if(input==2)
            printf("%d is a Prime number.\n",input);
            if(input%j==0){
            printf("%d is a Non Prime Number\n",input);
            break;
            }

        }
        if(j>i)
        printf("%d is Prime Number\n",input);
        return 0;
    }

9.  //Write a program to calculate LCM of two numbers.
        #include <stdio.h>
    int main()
    {
        int input1,input2,temp,hcf,lcm;
        int x=input1,y=input2;
        printf("Enter two numbers :");
        scanf("%d %d",&x,&y);
        if(x>y)
        {
            input1=x;
            input2=y;
        }
        else
        {
            input1 =y;
            input2=x;
        }

        while(1)
        {
            temp = input1%input2;
            if(temp==0){
            hcf = input2;
            break;}
            input1 =input2%temp;
            if(input1==0){
            hcf = temp;
            break;}
            input2 = temp%input1;
            if(input2==0){
            hcf = input1;
            break;}
        }
        lcm = x*y/hcf;
        printf("\nlcm is : %d.",lcm);
        return 0;
    }

10. //Write a program to reverse a given number.
    #include <stdio.h>
    int main()
    {
        int input,i,arr[10];
        printf("Enter a number :");
        scanf("%d",&input);
        for(i=0;i<=10;i++)
        {
            arr[i]=input%10;
            input=input/10;
            
        }
        printf("\nYour entered number is reverse :");
        for(i=0;i<=10;i++){
            if(arr[i]==0)
            break;
            printf("%d",arr[i]);
        }
        printf("\n");
        return 0;

    }
